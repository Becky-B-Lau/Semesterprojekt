@page 
@model Semesterprojekt.Pages.Kunder.EditKundeModel
@{
}
@* <form>: Form element. Den er brugt til at collecte inputs fra brugerne.
method="post": Denne metoder bliver brugt til at sende den date brugeren har tastet ind, til en server.
post: Når method="post" bliver brugt, fordi brugeren skal udfylde en form*@
<form method="post">
	@* "form-group" er styling, der gør at elementerne får den rigtige afstand osv. *@
	<div class="form-group">
		@* <label asp-for="Ordre.Kunde.Navn" binder label til en klasses property, som i dette tilfælde er kundens navn.
		class="control-label"></label> er style *@
		<label asp-for="Ordre.Kunde.Navn" class="control-label"></label>
		@* input elemtentet bliver brugt til at skabe en interaktiv kontrol i en web form til at acceptere data fra brugeren. *@
		<input asp-for="Ordre.Kunde.Navn" class="form-control" />
		@* Håndterer errors. Klassen text-danger gør, at teksten bliver rød. *@
		<span asp-validation-for="Ordre.Kunde.Navn" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ordre.Kunde.Alder" class="control-label"></label>
		<input asp-for="Ordre.Kunde.Alder" class="form-control" />
		<span asp-validation-for="Ordre.Kunde.Alder" class="text-danger"></span>
	</div>
    <div class="form-group">
		<label asp-for="Ordre.Kunde.Telefonnummer" class="control-label"></label>
		<input asp-for="Ordre.Kunde.Telefonnummer" class="form-control" />
		<span asp-validation-for="Ordre.Kunde.Telefonnummer" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ordre.Kunde.Adresse" class="control-label"></label>
		<input asp-for="Ordre.Kunde.Adresse" class="form-control" />
		<span asp-validation-for="Ordre.Kunde.Adresse" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ordre.Kunde.Email" class="control-label"></label>
		<input asp-for="Ordre.Kunde.Email" class="form-control" />
		<span asp-validation-for="Ordre.Kunde.Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ordre.Kunde.Type" class="control-label"></label>
		<input asp-for="Ordre.Kunde.Type" class="form-control" />
		<span asp-validation-for="Ordre.Kunde.Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ordre.Kunde.Kundeid" class="control-label"></label>
		@*Read only betyder, at den ikke kan redigeres.	*@
		<input asp-for="Ordre.Kunde.Kundeid" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group">
		@* Hidden betyder at den ikke bliver vist på hjemmesiden og read only betyder, at den ikke kan redigeres. *@
		<label hidden asp-for="Ordre.Beskrivelse" class="control-label"></label>
		<input hidden asp-for="Ordre.Beskrivelse" class="form-control" readonly="@(true)" />
		</div>
	<div class="form-group">
		<label hidden asp-for="Ordre.DateTime" class="control-label"></label>
		<input hidden asp-for="Ordre.DateTime" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group">
		<label hidden asp-for="Ordre.Billeder.Pris" class="control-label"></label>
		<input hidden asp-for="Ordre.Billeder.Pris" class="form-control" readonly="@(true)" />
	</div>
	<div class="form-group">
		<label hidden asp-for="Ordre.id" class="control-label"></label>
		<input hidden asp-for="Ordre.id" class="form-control" readonly="@(true)" />
	</div>

	@* Opdatér knappen  *@
	<p>
		<div class="form-group">
			<input type="submit" value="Opdatér" class="btn btn-primary" />
		</div>
	</p>
</form>


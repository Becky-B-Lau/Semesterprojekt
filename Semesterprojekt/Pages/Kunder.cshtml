@page
@model Semesterprojekt.Pages.KunderModel
@{
}
	<body>
<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th>
				Navn
			</th>
			<th>
				Alder
			</th>
			<th>
				Telefonnummer
			</th>
			<th>
				Email
			</th>
			<th>
				Addresse
			</th>
			<th>
				Erhverv
			</th>
			<th>
				Privat
			</th>
			<th>
				Kunde Id
			</th>

		</tr>
	</thead>

	<tbody>
		 @if (Model.Items != null)
		{
			foreach (var item in Model.Items)
			{
				<tr>
					<td>
						@item.Kunde.Navn @* Har ændret Id fra private til public i Ordre.cs *@
					</td>

					<td>
						@item.Kunde.Alder
					</td>

					<td>
						@item.Kunde.Telefonnummer
					</td>

					<td>
						@item.Kunde.Email
					</td>

					<td>
						@item.Kunde.Adresse
					</td>
					<td>
						@item.Kunde.Erhverv
					</td>
					<td>
						@item.Kunde.Privat
					</td>
					<td>
						@item.Kunde.Kundeid
					</td>
				</tr>

			}
		}
	</tbody>
</table>
</body>
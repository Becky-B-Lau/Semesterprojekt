@page
@model Semesterprojekt.Pages.Login.LogIndModel
@{
}
<html>
    <head>
    <style>

        /* generel style til siden, der gør siden ens, for forskellige browsere 
            box-sizing, bredde og højde på en boks
            margin = margener
            padding = rammen
        */
    *,
    *:before,
    *:after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    /* Baggrundsfarve og skrifttype til hele bodyen */
    body {
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;
        background: #ffffff;
    }

   /*  input og button style
    border (rammen) får en automatisk css, men er her blevet sat til none.
    outline (en slags ramme, der ikke tager højde for baggrunden) sat til none.
    baggrundsfavren usynlig
    tekstskrift */
    input,
    button {
        border: none;
        outline: none;
        background: none;
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    }

   /*  Laver 3D effekt til log ind/opret formen */
    .cont {
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        width: 900px;
        height: 550px;
        margin: 0 auto 100px;
        background: #fff;
        box-shadow: -10px -10px 15px rgba(255, 255, 255, 0.3), 10px 10px 15px rgba(70, 70, 70, 0.15), inset -10px -10px 15px rgba(255, 255, 255, 0.3), inset 10px 10px 15px rgba(70, 70, 70, 0.15);
    }

    /* felterne navn, adgangskode osv.. */
    .form {
        position: relative;
        width: 640px;
        height: 100%;
        -webkit-transition: -webkit-transform 1.2s ease-in-out;
        transition: -webkit-transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out, -webkit-transform 1.2s ease-in-out;
        padding: 50px 30px 0;
    }

    /* Gør så log ind og opret hænger sammen. Interaktivt */
    .sub-cont {
        overflow: hidden;
        position: absolute;
        left: 640px;
        top: 0;
        width: 900px;
        height: 100%;
        padding-left: 260px;
        background: #fff;
        -webkit-transition: -webkit-transform 1.2s ease-in-out;
        transition: -webkit-transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out, -webkit-transform 1.2s ease-in-out;
    }

   /*  sliding/transitioning effects - log ind */
    .cont.s--signup .sub-cont {
        -webkit-transform: translate3d(-640px, 0, 0);
        transform: translate3d(-640px, 0, 0);
    }

    /* Style til højre (grå side) i login siden */
        .img {
            overflow: hidden;
            z-index: 2;
            position: absolute;
            left: 0;
            top: 0;
            width: 260px;
            height: 100%;
            padding-top: 360px;
        }

            /* Style til højre (grå side) i login siden */
            .img:before {
                content: '';
                position: absolute;
                right: 0;
                top: 0;
                width: 900px;
                height: 100%;
                background-image: url("ext.jpg");
                opacity: .8;
                background-size: cover;
                -webkit-transition: -webkit-transform 1.2s ease-in-out;
                transition: transform 1.2s ease-in-out;
                transition: transform 1.2s ease-in-out, -webkit-transform 1.2s ease-in-out;
            }

            /* Style til højre (grå side) i login siden */
            .img:after {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6);
            }

           /*   sliding animation/ 3D effekt til opret siden */
    .cont.s--signup .img:before {
        -webkit-transform: translate3d(640px, 0, 0);
        transform: translate3d(640px, 0, 0);
    }

   /*  Teksten inden i den grå side af login/signup formen */
    .img__text {
        z-index: 2;
        position: absolute;
        left: 0;
        top: 50px;
        width: 100%;
        padding: 0 20px;
        text-align: center;
        color: #fff;
        -webkit-transition: -webkit-transform 1.2s ease-in-out;
        transition: -webkit-transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out;
        transition: transform 1.2s ease-in-out, -webkit-transform 1.2s ease-in-out;
    }

   /*  "Velkommen" i den hvide side */
        .img__text h2 {
            margin-bottom: 10px;
            font-weight: normal;
        }

       /*  glemt adgangskode */
        .img__text p {
            font-size: 14px;
            line-height: 1.5;
        }

        /* Teksten i venstre side slider hen mod højre, når man klikker "opret" */
    .cont.s--signup .img__text.m--up {
        -webkit-transform: translateX(520px);
        transform: translateX(520px);
    }
        /* Teksten i højre side slider hen mod venstre, når man klikker "Log ind" */
    .img__text.m--in {
        -webkit-transform: translateX(-520px);
        transform: translateX(-520px);
    }
   /*  Teksten i den grå side bliver stående på sin postition, selvom den anden tekst slider */
    .cont.s--signup .img__text.m--in {
        -webkit-transform: translateX(0);
        transform: translateX(0);
    }

   /*  "Opret" knappen */
    .img__btn {
        overflow: hidden;
        z-index: 2;
        position: relative;
        width: 100px;
        height: 36px;
        margin: 0 auto;
        background: transparent;
        color: #fff;
        text-transform: uppercase;
        font-size: 15px;
        cursor: pointer;
    }

  /*   Den hvide kant rundt om log ind og opret knappen i den grå side */
            .img__btn:after {
                content: '';
                z-index: 2;
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                border: 2px solid #fff;
                border-radius: 30px;
            }

           /*  Log ind og opret knappen i den grå sides' position */
        .img__btn span {
            position: absolute;
            left: 0;
            top: 0;
            display: -webkit-box;
            display: flex;
            -webkit-box-pack: center;
            justify-content: center;
            -webkit-box-align: center;
            align-items: center;
            width: 100%;
            height: 100%;
            -webkit-transition: -webkit-transform 1.2s;
            transition: -webkit-transform 1.2s;
            transition: transform 1.2s;
            transition: transform 1.2s, -webkit-transform 1.2s;
        }

       /*  Gør at Log ind knappen i den grå sides tekst kører opad, når man trykker på den */
            .img__btn span.m--in {
                -webkit-transform: translateY(-72px);
                transform: translateY(-72px);
            }

/* Gør at knapper går tilbage til deres rigtige position, efter de har kørt opad når man har trykket på dem */
    .cont.s--signup .img__btn span.m--in {
        -webkit-transform: translateY(0);
        transform: translateY(0);
    }

        /*  Gør at Opret knappen i den grå sides tekst kører opad, når man trykker på den */
    .cont.s--signup .img__btn span.m--up {
        -webkit-transform: translateY(72px);
        transform: translateY(72px);
    }

    /* Velkommen og Opret en bruger overskrifterns style */
    h2 {
        width: 100%;
        font-size: 26px;
        text-align: center;
    }

  /*   Felternes style */
    label {
        display: block;
        width: 260px;
        margin: 25px auto 0;
        text-align: center;
    }
   /*  Log ind felteres style */
    label span {
            font-size: 12px;
            color: #cfcfcf;
            text-transform: uppercase;
        }

       /*  Log ind knappen i formen */
    input {
        display: block;
        width: 100%;
        margin-top: 5px;
        padding-bottom: 5px;
        font-size: 16px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.4);
        text-align: center;
    }

   /*  glemt adgangskode style */
    .forgot-pass {
        margin-top: 15px;
        text-align: center;
        font-size: 12px;
        color: #cfcfcf;
    }

   /*  Log ind knappen i formen */
    .submit {
        margin-top: 40px;
        margin-bottom: 20px;
        background: #d4af7a;
        text-transform: uppercase;
    }
/* 
    Login formen */
    .sign-in {
        -webkit-transition-timing-function: ease-out;
        transition-timing-function: ease-out;
    }

   /*  Opret formen */
    .cont.s--signup .sign-in {
        -webkit-transition-timing-function: ease-in-out;
        transition-timing-function: ease-in-out;
        -webkit-transition-duration: 1.2s;
        transition-duration: 1.2s;
        -webkit-transform: translate3d(640px, 0, 0);
        transform: translate3d(640px, 0, 0);
    }
        /*  Opret formen */
    .sign-up {
        -webkit-transform: translate3d(-900px, 0, 0);
        transform: translate3d(-900px, 0, 0);
    }
        /*  Opret formen */
    .cont.s--signup .sign-up {
        -webkit-transform: translate3d(0, 0, 0);
        transform: translate3d(0, 0, 0);
    }

        .LogInd {
            background-color: #ffdead;
            display: block;
            width: 260px;
            margin: 25px auto 0;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 20px;
        }
    </style>
</head>
    <body>
    <br>
    <br>
    <br>
    <br>
    <div class="cont">
        @* Login form *@
        <div class="form sign-in">
          @*   Overskrift *@
            <h2>Velkommen</h2>
            @* Post - man kan redigere *@
            <form method="post">
               @*  Username felt *@
                <label asp-for="UserName">
                    @* Navnet til feltet username *@
                    <span>Brugernavn</span>
                    <input asp-for="UserName" />
                </label>
                @* Password felt *@
                <label asp-for="Password">
                    @* Navnet til feltet password *@
                    <span>Adgangskode</span>
                    <input asp-for="Password" />
                </label>
                @* Glemt adgangskode tekst, som man ikke kan trykke på *@
                <p class="forgot-pass">Glemt adgangskode?</p>

               @*  Log ind knappen *@
                <input type="submit" onclick=" window.location.href='/LogInd' ;" id="LogInd" class="LogInd" value="Log Ind">
            </form>
        </div>
        @* Bruges til CSS, så log ind og Opret en bruger hænger sammen *@
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">

                    @* Teksten/informationen i højre side *@
                    <h3>Har du ikke en bruger? Opret en her:</h3>
                </div>
                <div class="img__text m--in">

                    @* Teksten/informationen i venstre side *@
                    <h3>Hvis du allerede har en bruger, så log ind.</h3>
                </div>
                <div class="img__btn">
                    @* Felterne man kan trykke på, for enten at logge ind eller oprette en bruger *@
                    <span class="m--up">Opret</span>
                    <span class="m--in">Log ind</span>
                </div>
            </div>

           @*  Opret en bruger formen *@
            <div class="form sign-up">
                @* Overskrift *@
                <h2>Opret en bruger</h2>
               @*  Gør at man kan redigere *@
                <form method="post">
                    @* Navn feltet *@
                    <label ="Name">
                        <span>Navn</span>
                        <input ="Name" />
                    </label>
                    @* Email feltet *@
                    <label ="Email">
                        <span>Email</span>
                        <input ="Email" />
                    </label>
                    @* Brugernavn feltet *@
                    <label asp-for="UserName">
                        <span>Brugernavn</span>
                        <input asp-for="UserName" />
                    </label>
                    @* Adgangskode feltet *@
                    <label asp-for="Password">
                        <span>Adgangskode</span>
                        <input asp-for="Password" />
                    </label>
                    <br />

                    @* @* Opret knappen *@ 
                    <input type="submit" onclick=" window.location.href='/LogInd' ;" id="Opret" class="LogInd" value="Opret">
                </form>

            </div>
        </div>
    </div>

    @* Javascript, der gør log ind og opret interaktive (at den skifter til login/sign up) *@
    <script>
        document.querySelector('.img__btn').addEventListener('click', function () {
            document.querySelector('.cont').classList.toggle('s--signup');
        });
    </script>
    </body>

</html>
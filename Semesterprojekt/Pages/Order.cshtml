@page
@using Semesterprojekt.Models;
@model OrderModel
@{
	ViewData["Title"] = "Ordreoversigt";
}

<head>
	<style>
		.Alle {
			position: relative;
		}

		.Kontakt {
			position: absolute;
			top: 200px;
			left: 600px;
		}

		.pKontakt {
			font-size: 18px;
			text-align: center;
		}


		.text-box {
			width: 390px;
			resize: none;
			overflow: auto;
		}
	</style>
</head>

<body>
	<h1> <center> @ViewData["Title"]</center></h1>
	<hr />

	@* Searchbar *@
	<form method="post" class="form-inline">
		<input asp-for="SearchString" class="form-control mr-1" placeholder="Enter search term" />
		<input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
	</form>

	<hr>

	<table class="table table-bordered table-hover table-striped">
		<thead>
			<tr>
				<th>
					OrdreId
				</th>
				<th>
					Dato
				</th>
				<th>
					Navn
				</th>
				<th>
					Email
				</th>
				<th>
					Telefon
				</th>
				<th>
					Pris
				</th>
				@*<th>
					Alder
				</th>
				*@

				<th>
					Beskrivelse
				</th>

				@*<th>
					Pris
				  </th>*@
			
				<th>
					Bekræft / Afvis Ordre
				</th>

			</tr>
		</thead>

		<tbody>
			@if (Model.Items != null)
			{
				foreach (var item in Model.Items.OrderByDescending(i => i.id))
                {
					<tr>
						<td>
							@item.id @*Har ændret Id fra private til public i Ordre.cs *@
						</td> 

						<td>
							@item.DateTime
						</td>

						<td>
							@item.Kunde.Navn
						</td>

						<td>
							@item.Kunde.Email
						</td>

						<td>
							@item.Kunde.Telefonnummer
						</td>

						<td>
							@item.Billeder.Pris
						</td>
						<td>
							@item.Beskrivelse
						</td>

						<td>
							<div class="form-group">
								<input type="submit" onclick="alert('Du har accepteret Ordren. Bekræftelsesmail er sent til Kunden.')" id="Send" value="Accepter" class="btn btn-primary" style="margin:2px;" />

								<input type="submit" onclick="alert('Du har afvist Ordren. Bekræftelsesmail er sent til Kunden.')" id="Send" value="Afvis" class="btn btn-primary" style="margin:2px;" />
							</div>

						</td>
					</tr>

				}
			}
		

		</tbody>

	</table>


</body>
